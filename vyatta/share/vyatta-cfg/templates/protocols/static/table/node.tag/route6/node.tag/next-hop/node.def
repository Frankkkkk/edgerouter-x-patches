tag:
type: ipv6
help: Next-hop router [REQUIRED]
end:
  if [[ -n "$VAR(../../../table/@)" ]]
  then
    table="--table $VAR(../../../table/@)"
  fi
  if [[ -z "$VAR(./disable)" ]]
  then
    if [[ ${COMMIT_ACTION} = 'DELETE' ]]
    then
      if ! ${vyatta_sbindir}/vyatta-next-hop-check $VAR(../@) ipv6 address; then
        exit 1;
      fi
      if /usr/sbin/ubnt-gw-check "$VAR(../@)" "$VAR(@)"
      then
          ${vyatta_sbindir}/ubnt-multi-table.pl $table \
                                                --action=del \
                                                --address-family=ipv6 \
                                                --route-type=next-hop \
                                                --route=$VAR(../@) \
                                                --next-hop=$VAR(@)
      fi
    else
      if [[ -n "$VAR(./distance/@)" ]]
      then
         dist="--distance $VAR(./distance/@)"
      fi
        ${vyatta_sbindir}/ubnt-multi-table.pl $table $dist \
                                              --action=add \
                                              --address-family=ipv6 \
                                              --route-type=next-hop \
                                              --route=$VAR(../@) \
                                              --next-hop=$VAR(@)
    
    fi
  else
    if /usr/sbin/ubnt-gw-check "$VAR(../@)" "$VAR(@)"
    then
        ${vyatta_sbindir}/ubnt-multi-table.pl $table \
                                              --action=del \
                                              --address-family=ipv6 \
                                              --route-type=next-hop \
                                              --route=$VAR(../@) \
                                              --next-hop=$VAR(@)
    fi
  fi
